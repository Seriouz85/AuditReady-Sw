# ===============================
# AUDIT READINESS HUB - ENVIRONMENT VARIABLES
# ===============================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# ===============================
# SUPABASE CONFIGURATION
# ===============================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here
VITE_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ===============================
# PAYMENT PROCESSING (STRIPE)
# ===============================
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
VITE_STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===============================
# AI SERVICES (Choose one or both)
# ===============================
# Google Gemini AI
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI
VITE_OPENAI_API_KEY=sk-your_openai_api_key_here

# ===============================
# MICROSOFT ENTRA ID (AZURE AD) SSO
# ===============================
VITE_ENTRA_CLIENT_ID=your_azure_app_client_id
VITE_ENTRA_TENANT_ID=your_azure_tenant_id
VITE_ENTRA_CLIENT_SECRET=your_azure_app_secret
VITE_ENTRA_REDIRECT_URI=https://your-domain.com/auth/entra/callback

# ===============================
# AZURE PURVIEW DATA CLASSIFICATION (Optional)
# ===============================
VITE_AZURE_PURVIEW_ENDPOINT=https://your-purview-account.purview.azure.com
VITE_AZURE_CLIENT_ID=your_purview_client_id
VITE_AZURE_CLIENT_SECRET=your_purview_client_secret
VITE_AZURE_TENANT_ID=your_azure_tenant_id

# ===============================
# ERROR MONITORING (SENTRY)
# ===============================
VITE_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ===============================
# APPLICATION CONFIGURATION
# ===============================
VITE_APP_URL=http://localhost:5173
VITE_API_URL=http://localhost:5173/api
NODE_ENV=development

# ===============================
# SECURITY CONFIGURATION
# ===============================
# JWT Secret for additional security
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here

# Session encryption key
SESSION_SECRET=your_session_encryption_key_here

# CSRF Protection
CSRF_SECRET=your_csrf_protection_secret_here

# ===============================
# EMAIL CONFIGURATION (Optional)
# ===============================
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@your-domain.com

# ===============================
# REDIS CONFIGURATION (Optional)
# ===============================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ===============================
# DEVELOPMENT & TESTING
# ===============================
# Set to 'true' to enable development features
VITE_DEV_MODE=true

# Set to 'true' to enable detailed logging
VITE_DEBUG_MODE=false

# Test database URL (for testing only)
TEST_DATABASE_URL=postgresql://localhost:5432/audit_ready_test

# ===============================
# PRODUCTION OVERRIDES
# ===============================
# In production, these should be set in your hosting platform
# NEVER put production secrets in this file!

# Production domain
# VITE_APP_URL=https://your-production-domain.com

# Production API URL
# VITE_API_URL=https://your-production-domain.com/api

# ===============================
# SECURITY NOTES
# ===============================
# 1. Always use HTTPS in production
# 2. Keep all secrets secure and rotate them regularly
# 3. Use different secrets for each environment
# 4. Never commit this file with real values to version control
# 5. Use your hosting platform's environment variable system in production