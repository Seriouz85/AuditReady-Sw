# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to version control

# =============================================================================
# REQUIRED PRODUCTION SECRETS
# =============================================================================

# Supabase Configuration
VITE_SUPABASE_URL=https://your-production-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_production_anon_key_here
VITE_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_production_stripe_key
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# AI Services
VITE_GEMINI_API_KEY=your_production_gemini_key
VITE_OPENAI_API_KEY=your_production_openai_key

# Microsoft Entra ID (Enterprise SSO)
VITE_ENTRA_CLIENT_ID=your_entra_client_id
VITE_ENTRA_TENANT_ID=your_entra_tenant_id
ENTRA_CLIENT_SECRET=your_entra_client_secret

# Monitoring & Error Tracking
VITE_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Email Service (Resend)
RESEND_API_KEY=re_your_resend_api_key

# Redis Configuration
REDIS_URL=redis://user:password@your-redis-host:6379
REDIS_PASSWORD=your_secure_redis_password

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=production
VITE_APP_ENV=production

# Security
SESSION_SECRET=your_super_secure_session_secret_min_32_chars
JWT_SECRET=your_jwt_signing_secret_min_32_chars

# Performance
ENABLE_CACHING=true
CACHE_TTL_DEFAULT=600
CACHE_TTL_DASHBOARD=300
CACHE_TTL_STATIC=3600

# Features
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_AI_ASSISTANCE=true
ENABLE_ADVANCED_REPORTING=true
ENABLE_MAINTENANCE_MODE=false

# Demo Account (KEEP THESE FOR DEMO FUNCTIONALITY)
DEMO_EMAIL=demo@auditready.com
DEMO_PASSWORD=AuditReady@Demo2025!
ENABLE_DEMO_ACCOUNT=true

# =============================================================================
# OPTIONAL CONFIGURATIONS
# =============================================================================

# Firebase (if using Firebase features)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id

# Analytics
ENABLE_ANALYTICS=true
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# CDN
CDN_URL=https://cdn.auditready.com

# Email Configuration
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=resend
SMTP_PASS=your_resend_api_key

# Database Connection Pool
CONNECTION_POOL_SIZE=20
QUERY_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# DEPLOYMENT SPECIFIC
# =============================================================================

# Domain Configuration
VITE_APP_URL=https://app.auditready.com
VITE_API_URL=https://api.auditready.com

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/auditready.crt
SSL_KEY_PATH=/etc/ssl/private/auditready.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

